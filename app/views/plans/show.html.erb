<div class="container main-container align-middle bg-light align-self-center">
  <p id='notice'><%= notice %></p>
  <h2 class="text-info"> Plan </h2>
  <table class="table">
    <thead>
      <th scope='col'> Plan Name </th>
      <th scope='col'> Monthly Fee </th>
      <th scope='col' colspan = '2' ></th>
    </thead>
    <tbody>
      <td><%= @plan.plan_name %></td>
      <td><%= @plan.monthly_fee %></td>
    </tbody>
  </table>
  <h2 class="text-info"> Features </h2>
  <table class= "table">
    <thead>
      <tr>
        <th scope="col"> Feature name </th>
        <th scope="col"> Feature code </th>
        <th scope="col"> Feature unit price </th>
        <th scope="col"> Feature max unit limit </th>
      </tr>
    </thead>
    <tbody>
      <% @plan.features.each do |feature| %>
        <tr>
          <td><%= feature.feature_name %></td>
          <td><%= feature.feature_code %></td>
          <td><%= feature.feature_unit_price %></td>
          <td><%= feature.feature_max_unit_limit %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <td><%= link_to 'Back', plans_path, class: 'actions btn btn-primary' %></td>
  <td><%= link_to 'Buy', subscriptions_path(plan_id: params[:id]), class: 'actions btn btn-primary', method: 'POST' %></td>
</div>
